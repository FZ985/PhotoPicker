<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <!-- 主题基类   -->
    <style name="Material.Selection.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/jmaterial_colorPrimary</item>
        <item name="colorPrimaryVariant">@color/jmaterial_colorPrimaryDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/jmaterial_colorPrimary
        </item>
        <!--  自定义相关属性 -->
        <item name="selection.status.isDarkFont">false</item>
        <item name="selection.bg">@color/jgrey_50</item>
        <item name="selection.toolbarHeight">?android:attr/actionBarSize</item>
        <item name="selection.toolbar">@style/private_selection_toolbar_style</item>
        <item name="selection.back">@style/private_selection_back_style</item>
        <!-- 空布局  -->
        <item name="selection.emptyView">@layout/selection_emptyview</item>
        <!--  加载布局 -->
        <item name="selection.loadingView">@layout/selection_loading</item>
        <!--  顶部文件夹相关属性  -->
        <item name="selection.folder">@style/private_selection_folder_style</item>
        <item name="selection.folder.textSize">17sp</item>
        <item name="selection.folder.textColor">@color/jmaterial_white</item>
        <item name="selection.folder.arrow">@style/private_selection_folder_arrow_style</item>
        <!--  底部相关属性 -->
        <item name="selection.bottom.height">?android:attr/actionBarSize</item>
        <item name="selection.bottom">@style/private_selection_bottom_style</item>
        <item name="selection.bottom.preview.text">预览</item>
        <item name="selection.bottom.preview">@style/private_selection_bottom_preview_style</item>
        <item name="selection.bottom.commit">@style/Widget.Selection_Commit</item>

        <!--  列表相关属性  -->
        <item name="selection.list.totalTextSize">15sp</item>
        <item name="selection.list.totalTextColor">@color/jcolor_3333333</item>
        <item name="selection.list.camera.bg">@color/jcolor_353535</item>
        <item name="selection.list.camera.image">@drawable/ic_camera_white</item>
        <item name="selection.list.camera.text">Camera</item>
        <item name="selection.list.camera.textSize">14sp</item>
        <item name="selection.list.camera.textColor">@color/jcolor_cdcdcd</item>
        <item name="selection.list.item.layerbg">#70000000</item>
        <item name="selection.list.item.videoStyle">@style/internal_listVideo_Style</item>
        <item name="selection.icon.normal">@drawable/photo_icon_normal</item>
        <item name="selection.icon.selected">@drawable/photo_icon_select</item>

        <!--  文件夹列表相关  -->
        <item name="selection.folderlist.allName">图片和视频</item>
        <item name="selection.folderlist.bg">#80000000</item>
        <item name="selection.folderlist.divider">#e4e4e4</item>
        <item name="selection.folderlist.item.rootbg">@color/jmaterial_white</item>
        <item name="selection.folderlist.item.bg">@drawable/bg_material_dark</item>
        <item name="selection.folderlist.item.dirNameTextColor">@color/jmaterial_black</item>
        <item name="selection.folderlist.item.dirNameTextSize">14sp</item>
        <item name="selection.folderlist.item.dirNumsTextColor">#95000000</item>
        <item name="selection.folderlist.item.dirNumsTextSize">14sp</item>
        <item name="selection.folderlist.item.selectIcon">@drawable/photo_folder_select</item>

        <!--  预览界面相关属性      -->
        <item name="preview.status.isDarkFont">false</item>
        <item name="preview.bg">@color/jmaterial_black</item>
        <item name="preview.titleBarColor">#00ffffff</item>
        <item name="preview.statusBarColor">@color/jcolor_3333333</item>
        <item name="preview.navigationBarColor">@color/jcolor_3333333</item>
        <item name="preview.toolbar">@style/private_preview_toolbar_style</item>
        <item name="preview.back">@style/private_selection_back_light_style</item>
        <item name="preview.titleBarColorAlpha">-1</item>
        <item name="preview.statusBarColorAlpha">-1</item>
        <item name="preview.toolbarBgAlpha">-1</item>
        <item name="preview.bottomBarColorAlpha">-1</item>
        <item name="preview.commit">@style/Widget.Selection_Commit</item>
        <item name="preview.bottom">@style/private_preview_bottom_style</item>
        <item name="preview.bottom.numText">@style/private_preview_bottom_numtext</item>
        <item name="preview.check.root">@style/private_preview_check_root_style</item>
        <item name="preview.check.normal">@drawable/photo_icon_normal</item>
        <item name="preview.check.selected">@drawable/photo_icon_select</item>
        <item name="preview.check.imageSize">@style/private_preview_check_imagesize_style</item>
        <item name="preview.check.text">@style/private_preview_check_text_style</item>
        <item name="preview.playvideo">@drawable/ic_playvideo_white</item>
    </style>

    <!-- 亮色主题   -->
    <style name="Selection.Light" parent="Material.Selection.Base">
        <item name="colorPrimary">@color/jmaterial_white</item>
        <item name="colorPrimaryVariant">@color/jmaterial_white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/jmaterial_white</item>
        <item name="selection.status.isDarkFont">true</item>
        <item name="selection.toolbar">@style/private_selection_toolbar_light_style</item>
        <item name="selection.back">@style/private_selection_back_dark_style</item>
        <item name="selection.folder.textColor">@color/jmaterial_black</item>
    </style>

    <!-- 黑色主题   -->
    <style name="Selection.Dark" parent="Material.Selection.Base">
        <item name="colorPrimary">@color/jcolor_3333333</item>
        <item name="colorPrimaryVariant">@color/jcolor_3333333</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/jcolor_3333333</item>
        <item name="selection.bg">@color/jmaterial_black</item>
        <item name="selection.toolbar">@style/private_selection_toolbar_dark_style</item>
        <item name="selection.back">@style/private_selection_back_light_style</item>
        <item name="selection.folder">@style/private_selection_folder_dark_style</item>
        <item name="selection.bottom">@style/private_selection_bottom_dark_style</item>
        <item name="selection.bottom.preview">@style/private_selection_bottom_preview_dark_style
        </item>
        <item name="selection.list.totalTextColor">@color/jmaterial_white</item>
        <item name="selection.list.camera.bg">@color/jgrey_600</item>
        <item name="selection.list.item.layerbg">#99ffffff</item>
        <item name="selection.folderlist.item.rootbg">@color/jcolor_3333333</item>
        <item name="selection.folderlist.item.bg">@drawable/bg_material_light</item>
        <item name="selection.folderlist.item.dirNameTextColor">@color/jmaterial_white</item>
        <item name="selection.folderlist.item.dirNumsTextColor">@color/jcolor_cdcdcd</item>
        <item name="selection.folderlist.divider">@color/jmaterial_black</item>
        <item name="selection.emptyView">@layout/selection_emptyview_dark</item>
    </style>

</resources>